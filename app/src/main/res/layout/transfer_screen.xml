                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/ETCCard2Value"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="134dp"
                            android:fontFamily="@font/medium_italic"
                            android:letterSpacing="-0.05"
                            android:text="@string/card1CurrencyValue"
                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    </FrameLayout>
                    <FrameLayout
                        android:layout_height="42dp"
                        android:layout_width="307dp"
                        android:layout_marginTop="150dp"
                        android:layout_marginStart="-310dp"
                        android:background="@drawable/round_currency"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        >
                        <TextView
                            android:id="@+id/LTCcard2"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:fontFamily="@font/medium_italic"
                            android:letterSpacing="-0.05"
                            android:text="@string/ltc"
                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/LTCCard2Value"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="134dp"
                            android:fontFamily="@font/medium_italic"
                            android:letterSpacing="-0.05"
                            android:text="@string/card1CurrencyValue"
                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    </FrameLayout>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="640dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/round_textfield"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CHANGE VALUE"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="32sp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>