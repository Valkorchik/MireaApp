<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyTransfer"
    android:background="@drawable/gradient_background">



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:background="@color/white_grey"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="60dp"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/hintColor"
        android:textAlignment="center"
        app:itemTextAppearanceActive="@style/Widget.BottomNavigationView"
        app:itemTextAppearanceInactive="@style/Widget.BottomNavigationView"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transfer_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/round_textfield"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/cardsTextView"
            android:layout_width="292dp"
            android:layout_height="53dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/medium_italic"
            android:letterSpacing="-0.05"
            android:text="@string/currency_transfer"
            android:textAlignment="center"
            android:textColor="@color/hintColor"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="336dp"
                android:layout_height="250dp"
                android:layout_marginTop="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/gradient_card1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="101dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="220dp"
                    android:fontFamily="@font/medium_italic"
                    android:letterSpacing="0.03"
                    android:text="@string/card_1"
                    android:textAlignment="center"
                    android:textColor="@color/cardName"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="307dp"
                    android:layout_height="219dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="35dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:layout_width="307dp"
                        android:layout_height="42dp"

                        android:layout_marginTop="4dp"
                        android:background="@drawable/round_currency"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/BTCcard1"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:fontFamily="@font/medium_italic"
                            android:letterSpacing="-0.05"
                            android:text="@string/btc"
                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/BTCcard1Value"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="134dp"
                            android:fontFamily="@font/medium_italic"
                            android:letterSpacing="-0.05"
                            android:text="@string/card1CurrencyValue"
                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="307dp"
                        android:layout_height="42dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/round_currency"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/ETHcard1"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:fontFamily="@font/medium_italic"
                            android:letterSpacing="-0.05"
                            android:text="@string/eth"
                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ETHCard1Value"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="134dp"
                            android:fontFamily="@font/medium_italic"
                            android:letterSpacing="-0.05"
                            android:text="@string/card1CurrencyValue"
                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="307dp"
                        android:layout_height="42dp"
                        android:layout_marginTop="30dp"

                        android:background="@drawable/round_currency"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/LTCcard1"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:fontFamily="@font/medium_italic"
                            android:letterSpacing="-0.05"
                            android:text="@string/ltc"
                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/LTCCard1Value"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="134dp"
                            android:fontFamily="@font/medium_italic"
                            android:letterSpacing="-0.05"
                            android:text="@string/card1CurrencyValue"
                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </FrameLayout>


                </LinearLayout>
            </FrameLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-150dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/round_textfield"
        app:layout_constraintTop_toBottomOf="@+id/transfer_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        >
        <NumberPicker
            android:id="@+id/valuePicker"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
       


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:background="@drawable/round_style"
        android:backgroundTint="@color/lightGreen"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bold_italic"
        android:shadowRadius="10"
        android:text="Choose"
        android:textAlignment="center"
        android:textColor="#FBFBFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/picker"
        />

</androidx.constraintlayout.widget.ConstraintLayout>