                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="101dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="220dp"
                    android:text="@string/card_1"
                    android:textAlignment="center"
                    android:textColor="@color/cardName"
                    android:fontFamily="@font/medium_italic"
                    android:textSize="24sp"
                    android:letterSpacing="0.03"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <LinearLayout
                    android:layout_width="307dp"
                    android:layout_height="219dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="35dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <FrameLayout
                        android:layout_height="42dp"
                        android:layout_width="307dp"

                        android:layout_marginTop="4dp"
                        android:background="@drawable/round_currency"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                       <TextView
                        android:id="@+id/BTCcard1"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/medium_italic"
                        android:letterSpacing="-0.05"
                        android:text="@string/btc"
                        android:textAlignment="center"
                        android:textColor="@color/white_grey"
                        android:textSize="32sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:id="@+id/BTCcard1Value"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="134dp"
                            android:fontFamily="@font/medium_italic"
                            android:letterSpacing="-0.05"
                            android:text="@string/card1CurrencyValue"
                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    </FrameLayout>
                    <FrameLayout
                        android:layout_height="42dp"
                        android:layout_width="307dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginStart="-310dp"
                        android:background="@drawable/round_currency"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        >
                        <TextView
                            android:id="@+id/ETHcard1"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:fontFamily="@font/medium_italic"
                            android:letterSpacing="-0.05"
                            android:text="@string/eth"
                            android:textAlignment="center"
                            android:textColor="@color/white_grey"
                            android:textSize="32sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
